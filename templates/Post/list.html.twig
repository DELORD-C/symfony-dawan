{% extends 'base.html.twig' %}

{% block content %}
    <h1>Liste des posts</h1>
    <ul>
    {% for post in posts %}
        <li>
            <p>{{ post.content }}</p>
            <p>Auteur : {{ post.author.name }}</p>
            <p>Créé le : {{ post.createdAt|date("d/m/Y") }}</p>
            <a href="{{ path('app_post_edit', {post: post.id}) }}">Éditer</a>
            <a href="{{ path('app_post_delete', {post: post.id}) }}">Supprimer</a>
        </li>
    {% endfor %}
    </ul>
    <a href="{{ path('app_post_add') }}">Ajouter un post</a>
{% endblock %}